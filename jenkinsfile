pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/hiteshmouli/sBoot.git']]])
                sh 'mvn clean install'
            }
        }

        stage('build docker image') {
            steps {
                script {
                    sh 'DOCKER_HOST=tcp://docker-host:2375 docker build -t jendoc:1.0 --build-arg WAR_FILE=spring-boot-rest-example-0.5.0.war -f Dockerfile .'
                }
            }
        }
        
        stage('push image to Hub'){
            steps{
                script{
                    withCredentials([string(credentialsId: 'dockerhubpwd', variable: 'dockerhubpwd')]) {
                    sh 'docker login --username hiteshmouli -p ${dockerhubpwd}'
                    sh 'docker push hiteshmouli/jendoc:1.0'
                    }

                }
            }
        }
    }
}
